<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">

    <Button
            android:text="@string/cotizabtn"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:id="@+id/corizabtn" android:fadingEdge="none" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="113dp" android:layout_marginStart="113dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="113dp"
            android:layout_marginRight="113dp" android:background="@drawable/roundbutton" android:textSize="14sp"
            android:contentDescription="@string/cotizabtn"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/portafoliobtn"
            android:textColor="@color/colorAccent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/portafoliobtn"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:id="@+id/portafoliobtn" android:fadingEdge="none" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="111dp" android:layout_marginStart="111dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="113dp"
            android:layout_marginRight="113dp" android:background="@drawable/roundbutton" android:textSize="14sp"
            android:contentDescription="@string/cotizabtn"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/colorAccent"/>
    <ImageView
            android:layout_width="267dp"
            android:layout_height="244dp" app:srcCompat="@mipmap/ic_logo_background"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="74dp"
            android:layout_marginRight="74dp" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/corizabtn" app:layout_constraintVertical_bias="1.0"
            android:contentDescription="@string/logoInicio"/>
</android.support.constraint.ConstraintLayout>